<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ShoeStoreTextView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="WelcomeTextView" parent="ShoeStoreTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ShoeStoreButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="InstructionButton" parent="ShoeStoreButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/common_button_color</item>
    </style>

    <style name="ShoeListButton" parent="ShoeStoreButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/common_button_color</item>
    </style>

    <style name="ShoeNameTextView" parent="ShoeStoreTextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelStyle" parent="ShoeStoreTextView">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputStyle" parent="ShoeStoreTextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CancelButton" parent="ShoeStoreButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="SaveButton" parent="ShoeStoreButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/register_button_color</item>
    </style>

</resources>
